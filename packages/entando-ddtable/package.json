{
  "name": "@entando/ddtable",
  "version": "1.0.1",
  "license": "LGPL-2.1",
  "description": "react components used to render drag and drop tables in Entando projects",
  "keywords": [
    "entando",
    "drag",
    "drop",
    "react",
    "table"
  ],
  "repository": "https://github.com/entando/frontend-libraries",
  "scripts": {
    "test": "jest --env=jsdom",
    "lint": "eslint ./modules",
    "coverage": "jest --env=jsdom --coverage",
    "build": "babel modules -d dist/js && node-sass --output-style compressed sass/index.scss -o dist/css",
    "prepublish": "npm run build"
  },
  "files": [
    "dist",
    "!test",
    "!modules",
    "!sass"
  ],
  "main": "dist/js/index.js",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "node-sass": "^4.9.0",
    "patternfly-react": "^1.19.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "modules",
      "test"
    ],
    "collectCoverageFrom": [
      "modules/**/*.{js}"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{js}"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./modules"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "react": "^16.3.0",
    "react-dnd": "^2.6.0",
    "react-dnd-html5-backend": "^2.6.0",
    "react-intl": "^2.4.0"
  }
}
