{
  "name": "@entando/datatable",
  "version": "1.0.0",
  "description": "React customizable data table with column resizing and reordering",
  "keywords": [
    "entando",
    "custom",
    "react",
    "table",
    "column resize",
    "column reorder"
  ],
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --env=jsdom",
    "lint": "eslint ./modules",
    "coverage": "jest --env=jsdom --coverage",
    "build": "babel modules -d dist && node-sass --output-style compressed sass/index.scss -o dist/css",
    "prepublish": "npm run build"
  },
  "repository": "https://github.com/entando/frontend-libraries",
  "files": [
    "dist",
    "!test",
    "!modules",
    "!sass"
  ],
  "devDependencies": {
    "@testing-library/dom": "^7.26.5",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.2.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^23.5.0",
    "node-sass": "^4.9.0",
    "react-test-renderer": "^16.14.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "modules",
      "test"
    ],
    "collectCoverageFrom": [
      "modules/**/*.{js}"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{js}"
    ],
    "moduleNameMapper": {
      "^react-dnd$": "react-dnd/dist/cjs",
      "^react-dnd-html5-backend$": "react-dnd-html5-backend/dist/cjs",
      "^dnd-core$": "dnd-core/dist/cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread",
      [
        "module-resolver",
        {
          "root": [
            "./modules"
          ]
        }
      ]
    ]
  },
  "license": "LGPL-2.1",
  "peerDependencies": {
    "lodash": "^4.17.10",
    "patternfly-react": "^1.19.1"
  },
  "dependencies": {
    "@entando/ddtable": "^1.0.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-table": "^7.6.3"
  }
}
